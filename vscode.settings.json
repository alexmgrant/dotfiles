{
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "workbench.preferredHighContrastColorTheme": "Tokyo Night",
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "workbench.sideBar.location": "right",
  "eslint.run": "onSave",
  "workbench.editor.revealIfOpen": false,
  "files.exclude": {
    "node_modules": true
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.blame.highlight.locations": ["gutter"],
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "remote.SSH.defaultExtensions": [
    "eamodio.gitlens",
    "github.copilot",
    "wallabyjs.quokka-vscode"
  ],
  "remote.SSH.connectTimeout": 300,
  "remote.SSH.maxReconnectionAttempts": 3,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "shopifyGlobal.mysqlEditor": "external",
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    "editor.semanticHighlighting.enabled": true,
    "files.trimFinalNewlines": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.rulers": [120],
  "editor.largeFileOptimizations": false,
  "editor.bracketPairColorization.enabled": false,

  "editor.fontFamily": "'MonoLisa Variable-NoScript', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14.5,
  "editor.lineHeight": 0,
  "editor.fontVariations": true,
  "editor.fontLigatures": "'calt' on, 'liga' on, 'zero' on, 'ss02' off, 'ss06' off, 'ss01' on, 'ss10' on, 'frac' on",

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Tokyo Night",
  "workbench.colorTheme": "Tokyo Night Light",
  "extensions.ignoreRecommendations": true,

  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 10,
  "vim.vimrc.enable": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    // navigate/switch buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    // split windows
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // saving/closing file
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] }
  ],
  "github.copilot.editor.enableAutoCompletions": true
}
